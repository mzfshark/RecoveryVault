# UI environment variables (Vite)
# Copy to .env and fill the values as needed.

# App metadata
VITE_PROJECT_NAME="Recovery Vault"

# Reown (WalletConnect rebrand)
VITE_REOWN_PROJECT_ID=your_reown_project_id_here
VITE_REOWN_APP_URL=https://vault.thinkincoin.com
VITE_REOWN_APP_ICON=https://vault.thinkincoin.com/icon-512.png

# Harmony network
VITE_RPC_URL=https://api.harmony.one
VITE_CHAIN_ID=1666600000
VITE_HARMONY_EXPLORER_API_KEY="one"

# Contracts Recovery Vault
VITE_VAULT_ADDRESS=0xYourRecoveryVaultAddress

# Optional: if your UI needs to read token price (ONE/USD, etc.)
VITE_VAULT_ADDRESS=0x...   # RecoveryVault.sol
VITE_ORACLE_ADDRESS=0x...  # 0xDA7a001b254CD22e46d3eAB04d937489c93174C3
VITE_ORACLE_TESTNET=0x...  # 0xD0b2234eB9431e850a814bCdcBCB18C1093F986B
VITE_ORACLE_DECIMALS=18
VITE_USDC_ADDRESS=0x...    # 0xBC594CABd205bD993e7FfA6F3e9ceA75c1110da5

# Governance Info
INITIAL_OWNER=0x...         # fallback
RMC_WALLET_ADDRESS=0x...    # RMC Governance Multisig Wallet address
DEV_WALLET_ADDRESS=0x...    # DEV fees wallet

